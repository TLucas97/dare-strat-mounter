/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

::-webkit-scrollbar {
	width: 0.3rem;
	height: 0.3rem;
}

::-webkit-scrollbar-thumb {
	transition: 0.3s ease all;
	border-color: transparent;
	background-color: #7289da;
	z-index: 40;
}
::-webkit-scrollbar-background {
	background-color: #282b30;
}
